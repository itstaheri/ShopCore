@page
@model ServiceHost.Areas.Admin.Pages.Blog.Articles.IndexModel
@{
}


<h1>Articles</h1>

@{

    ViewData["Title"] = "مدیریت مقالات";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="./create">ایجاد مقاله جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در مقالات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="post">
                    <div class="form-group">
                        <label class="sr-only"></label>
                        <input name="Title" id="Title" class="form-control" placeholder="موضوع مقاله">
                    </div>
                    
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>

            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست مقالات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th></th>
                                    <th>موضوع</th>
                                    <th>تاریخ ایجاد</th>
                                    <th>نویسنده</th>
                                    <th>گروه</th>
                                    <th>وضعیت</th>
                                    <th>عملیات</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.articles)
                                {
                                    <tr>
                                        <td width="60" height="60">
                                            <img src="~/Img/ProductImages/@item.Id/@(item.Picture)" width="60" height="60">
                                        </td>
                                        <td>@item.Title</td>
                                        <td>@item.CreationDate</td>
                                        <td>@item.Username</td>
                                        <td>@item.CategoryName</td>

                                        @if (item.IsRemoved == false)
                                        {

                                            <form asp-page-handler="Remove" method="post">
                                                <td class="success">
                                                    <input type="hidden" name="Id" id="Id" value="@item.Id" />
                                                    <button class="btn-danger" type="submit">حذف</button>
                                                </td>
                                            </form>
                                        }
                                        else
                                        {
                                            <form asp-page-handler="Active" method="post">
                                                <td class="success">
                                                    <input type="hidden" name="Id" id="Id" value="@item.Id" />
                                                    <button class="btn-success" type="submit">فعال کردن</button>
                                                </td>
                                            </form>
                                        }
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5"
                                               asp-page="./Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i> ویرایش
                                            </a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
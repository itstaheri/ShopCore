@page
@model ServiceHost.Areas.Admin.Pages.Shop.Orders.OrderDetailValueModel
@{
}

<h1>Order Detail</h1>

@{

    ViewData["Title"] = "جزییات سفارش";
}

<div class="row">
    <div class="col-sm-12">

    </div>
</div>



<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست جزییات سفارش </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>

                                    <th height="60" width="60">تصویر</th>
                                    <th >محصول</th>
                                    <th width="100">تعداد</th>
                                    <th width="200">قیمت واحد</th>
                                    <th width="300">قیمت کل</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderDetail)
                                {

                                    <tr>
                                        <td height="60" width="60"><img src="/Img/ProductImages/@item.ProductName/@item.Picture" height="60" width="60" /></td>
                                        <td>@item.ProductName</td>
                                        <td>@item.Count</td>
                                        <td>@item.UnitPrice</td>
                                        <td>@item.TotalPrice</td>
                                      
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });


    </script>
}
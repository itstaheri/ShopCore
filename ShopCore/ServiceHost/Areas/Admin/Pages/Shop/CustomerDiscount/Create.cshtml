@page
@model ServiceHost.Areas.Admin.Pages.Shop.CustomerDiscount.CreateModel
@{
}


<div class="panel-heading"><h3 class="panel-title">ایجاد تخفیف</h3></div>
<div class="panel-body">
    <div class=" form">
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>مناسبت</label>
                <input type="text" class="form-control" id="reason" name="reason" />
            </div>
            <div class="form-group">
                <label>درصد تخفیف</label>
                <input type="text" class="form-control" id="DiscountRate" name="DiscountRate" width="15" /> %
            </div>
            <div class="form-group">
                <label>شروع</label>
                <input class="form-control PersianDateInput" id="Start" name="Start" />
            </div>
            <div class="form-group">
                <label>پایان</label>
                <input class="form-control PersianDateInput" id="End" name="End" />
            </div>
            <div class="form-group">
                <label>
                    انتخاب محصول
                </label>
                <select asp-items="Model.products" name="ProductId" id="ProductId" class="form-control">
                    <option value="0">انتخاب محصول</option>
                </select>
            </div>

            <button type="submit" class="btn-success">ایجاد</button>
        </form>
    </div>
</div>

@page
@model ServiceHost.Areas.Admin.Pages.Shop.CustomerDiscount.EditModel
@{
}


<div class="panel-heading"><h3 class="panel-title">ویرایش تخفیف</h3></div>
<div class="panel-body">
    <div class=" form">
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label>مناسبت</label>
                <input type="text" class="form-control" id="reason" name="reason" value="@Model.discount.reason"/>
            </div>
            <div class="form-group">
                <label>درصد تخفیف</label>
                <input type="text" class="form-control" id="DiscountRate" name="DiscountRate" width="15" value="@Model.discount.DiscountRate"/> %
            </div>
            <div class="form-group">
                <label>شروع</label>
                <input class="form-control PersianDateInput" id="Start" name="Start" value="@Model.discount.Start"/>
            </div>
            <div class="form-group">
                <label>پایان</label>
                <input class="form-control PersianDateInput" id="End" name="End" value="@Model.discount.End"/>
            </div>
            <div class="form-group">
               
                <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.discount.Id"/>
            </div>
            <div class="form-group">
                <label>
                    انتخاب محصول
                </label>
                <select asp-items="Model.products" name="ProductId" id="ProductId" class="form-control">
                    <option value="0">انتخاب محصول</option>
                </select>
            </div>

            <button type="submit" class="btn-success">ویرایش</button>
        </form>
    </div>
</div>

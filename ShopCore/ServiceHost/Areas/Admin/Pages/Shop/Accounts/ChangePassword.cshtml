@page
@model ServiceHost.Areas.Admin.Pages.Shop.Accounts.ChangePasswordModel
@{
}
<h1>تغییر رمزعبور</h1>

<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">تغییر رمزعبور</h3></div>
    <div class="panel-body">
        <div class=" form">
            <form action="" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label>رمزعبور جدید</label>
                    <input type="password" class="form-control" id="Password" name="Password" />
                </div>
                <div class="form-group">
                    <label> تکرار رمزعبور جدید</label>
                    <input type="password" class="form-control" id="RePassword" name="RePassword" />
                </div>
               

                <div class="form-group">
                    
                    <input type="hidden" class="form-control" id="Id" name="Id" value="@Model.AId"/>
                </div>


                <button type="submit">تغییر رمزعبور</button>
            </form>
        </div>
    </div>
</div>

@page
@model ServiceHost.Areas.Admin.Pages.Shop.Accounts.EditModel
@{
}

<h1>ویرایش کاربر</h1>

<div class="panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">ایجاد محصول</h3></div>
    <div class="panel-body">
        <div class=" form">
            <form action="" method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <label>نام و نام خانوداگی</label>
                    <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.Account.FullName"/>
                </div>
                <div class="form-group">
                    <label>نام کاربری</label>
                    <input type="text" class="form-control" id="Username" name="Username" value="@Model.Account.Username"/>
                </div>
                <div class="form-group">
                    <label>شماره تلفن</label>
                    <input type="tel" class="form-control" id="Number" name="Number" value="@Model.Account.Number" />
                </div>
                <div class="form-group">
                    <label>ایمیل</label>
                    <input type="email" class="form-control" id="Email" name="Email" value="@Model.Account.Email"/>
                </div>



                <div class="form-group">
                    <label>بارگذاری تصویر اصلی</label>
                    <input type="file" class="form-control" id="Image" name="Image" />
                </div>



                <div class="form-group">
                    <label>
                        انتخاب نقش
                    </label>
                    @*<select asp-items="Model.Roles" name="RoleId" id="RoleId" class="form-control">
                            <option value="0">انتخاب نقش </option>
                        </select>*@
                    <select asp-items="Model.Roles" name="RoleId" id="RoleId" class="form-control">
                        <option value="1">مدیر </option>
                        <option value="2">کاربر </option>
                    </select>
                </div>


                <button type="submit">ویرایش</button>
            </form>
        </div>
    </div>
</div>


@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



@await Component.InvokeAsync("ShopSlider")
<!--shop wrapper start-->
<div class="row no-gutters shop_wrapper">


    @foreach (var product in Model.products)
    {
        <div class="col-lg-3 col-md-4 col-12 ">
            <article class="single_product">
                <figure>
                    <div class="product_thumb">
                        <a class="primary_img"><img src="~/Img/ProductImages/@product.ProductName/@(product.Picture)" alt="@product.PictureAlt" width="250" height="250" title="@product.PictureTitle"></a>
                        @*<a class="secondary_img"><img src="~/Img/ProductImages/@(product.ProductCode)1.jpg" alt="@product.PictureAlt" width="250" height="250" title="@product.PictureTitle"></a>*@
                        @if (product.DiscountRate > 0)
                        {
                            <div class="label_product">
                                <span class="label_sale">@product.DiscountRate %</span>
                            </div>
                        }
                        <div class="action_links">
                            <ul>
                                <li class="wishlist"><a href="wishlist.html" title="افزودن به علاقه‌مندی‌ها"><i class="ion-android-favorite-outline"></i></a></li>
                                <li class="compare"><a href="#" title="افزودن به مقایسه"><i class="ion-ios-settings-strong"></i></a></li>
                                <li class="quick_button"><a asp-page="./ProductDetail" asp-route-id="@product.Id" title="مشاهده جزییات "><i class="ion-ios-search-strong"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="product_content grid_content">
                        <div class="product_content_inner">
                            <h4 class="product_name"><a href="product-details.html">@product.ProductName</a></h4>

                            <div class="price_box">
                                @if (product.HasDiscount == true)
                                {
                                    <span class="old_price">@product.Price تومان</span>
                                    <span class="current_price">@product.PriceAfterDiscount تومان</span>
                                }
                                else
                                {
                                    <span class="current_price">قیمت : @product.Price تومان </span>
                                }
                            </div>
                            <div class="text">
                                <a asp-page="Category" asp-route-CategoryId="@product.Id">دسته : @product.CategoryName</a>
                            </div>
                        </div>
                        <div class="add_to_cart">
                            
                            <a asp-page="./ProductDetail" asp-route-Id="@product.Id" title="مشاهده محصول">مشاهده محصول</a>
                        </div>
                    </div>

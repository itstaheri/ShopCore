@model List<SM.Application.Contracts.ProductCategory.ProductCategoryViewModel>


    <div class="categories_product_area mb-55">
        <div class="container">
            <div class="categories_product_inner">
                @foreach (var item in Model)
                {
                    <div class="single_categories_product">
                        <div class="categories_product_content">
                            <h4><a asp-page="Category" asp-route-CategoryId="@item.id">@item.CategoryName</a></h4>
                            <p>@item.ProductCount محصول</p>
                        </div>
                        <div class="categories_product_thumb">
                            <a asp-page="Category" asp-route-CategoryId="@item.id"><img src="~/Img/CategoryImages/@item.CategoryName/@item.Picture" height="90" width="60"></a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
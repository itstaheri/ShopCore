<div class="breadcrumbs_area">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb_content">
                    <ul>
                        <li><a asp-page="/Blog">بلاگ</a></li>
                        <li><a asp-page="./Blog/@Model.Article.Id">@Model.Article.Title</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


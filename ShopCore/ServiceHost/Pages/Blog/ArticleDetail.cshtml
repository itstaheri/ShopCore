                                    <h3 class="post_title">@Model.Article.Title</h3>
                                    <div class="blog_meta">
                                        <span class="author">ارسال توسط : <a href="#">@Model.Article.Username</a> / </span>
                                        <span class="meta_date">در : <a href="#">@Model.Article.CreationDate</a> /</span>
                                        <span class="post_category">دسته بندی : <a asp-page="./category" asp-route-Id="@Model.Article.CategoryId">@Model.Article.CategoryName</a></span>
                                    </div>
                                </div>
                                <div class="blog_thumb">
                                    <img src="~/Img/ArticleImages/@Model.Article.Id/@Model.Article.Picture" alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle">
                                </div>
                                <figcaption class="blog_content">
                                    <div class="post_content">

                                        <blockquote>
                                            <p>@Model.Article.ShortDescription</p>
                                        </blockquote>
                                        <p>@Model.Article.Description</p>

                                    </div>
